#!/bin/bash

# CHANGELOG
# [SuperPlumus] (2013-06-27 11-59)
#   Clean code

[ "$PLAYONLINUX" = "" ] && exit 0
source "$PLAYONLINUX/lib/sources"

TITLE="Shape3D X"
PREFIX="Shape3D"
WORKING_WINE_VERSION="1.4.1"

EDITOR="Shape3D"
EDITOR_URL="http://www.shape3d.com/"

POL_SetupWindow_Init
POL_Debug_Init

POL_SetupWindow_presentation "$TITLE" "$EDITOR" "$EDITOR_URL" "Tinou" "$PREFIX"

POL_Wine_SelectPrefix "$PREFIX"
POL_Wine_PrefixCreate "$WORKING_WINE_VERSION"

cd "$WINEPREFIX/drive_c"

POL_Download "http://www.shape3d.com/Shape3d/InstallX/sh3dX.exe" "cc668afc7e22b80bff268028d9873972"

POL_Wine_WaitBefore "$TITLE"
POL_Wine "sh3dX.exe"

POL_Call POL_Install_gdiplus

POL_Shortcut "Shape3d.exe"  "$TITLE"

POL_SetupWindow_Close
exit 0